<?xml version="1.0"?>
<robot name="myfirst">
  <material  name="while">
    <color rgba ="1 1 1 1"/>
  </material>

  <material  name="blue">
    <color rgba ="1 1 0.8 1"/>
  </material>


  <material  name="black">
    <color rgba ="0 0 0 1"/>
  </material>

  <!-- base_link -->
  <link name="base_link">
    <visual>
      <geometry>
        <cylinder length="0.6" radius="0.2"/>
      </geometry>
      <materal name = "blue"/>
    </visual>
  </link>

  <!-- right_leg -->
  <link name="right_leg">
    <visual>
      <geometry>
        <box size="0.6 0.2 0.2"/>
      </geometry>
      <origin rpy="0 1.57 0" xyz="0 0 -0.3"/>
      <material name ="while"/>
    </visual>
  </link>

  <link name = "right_front_wheel">
    <visual>
      <geometry>
        <cylinder length="0.1" radius="0.035"/>
      </geometry>
      <origin rpy="1.57 0 0" xyz="0 -0.22 -0.3"/>
      <material name ="back"/>
    </visual>
  </link>


  <joint name = "right_front_wheel_joint" type = "continuous">
    <parent link="right_leg"/>
    <child  link="right_front_wheel"/>
    <origin xyz="0 0 -0.65"/>
  </joint>

  <!-- base_link 과 right_leg 를 고정 조인트로 연결 -->
  <joint name="base_to_right_leg" type="fixed">
    <parent link="base_link"/>
    <child  link="right_leg"/>
    <origin xyz="0 -0.22 0.25"/>
  </joint>

  <!-- left_leg -->
  <link name="left_leg">
    <visual>
      <geometry>
        <box size="0.6 0.2 0.2"/>
      </geometry>
      <origin rpy="0 1.57 0" xyz="0 0 -0.3"/>
      <material name ="while"/>
    </visual>
  </link>


  <!-- base_link 과 left_leg 를 고정 조인트로 연결 -->
  <joint name="left_leg" type="fixed">
    <parent link="base_link"/>
    <child  link="left_leg"/>
    <origin xyz="0 0.22 0.25"/>
  </joint>

</robot>


<!-- 간단한 urdf 를 만들었고 rviz에 띄울 것 -->